  <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WatchStore | Home</title>
  <!-- Bootstrap CSS is injected by header partial -->
</head>
<body>
  <!-- Header (includes Bootstrap CSS) -->
  <%- include('partials/header') %>

 <div class="hero position-relative">
  <img src="/images/banner.jpg" 
       alt="Luxury Watch" 
       class="d-block w-100" 
       style="height: 80vh; object-fit: cover;">



  <!-- Caption -->
  <div class="hero-caption d-flex flex-column justify-content-center align-items-center h-100" 
       style="position:absolute; top:0; left:0; width:100%; height:100%;">
    <a href="/shop" class="btn btn-primary btn-lg mt-3">Shop Now</a>
  </div>
</div>



  <!-- New Arrivals -->
  <section class="container py-5">
    <h2 class="text-center mb-4">New Arrivals</h2>
    <div class="row g-4">
      <% if (locals.newArrivals && newArrivals.length > 0) { %>
        <% newArrivals.forEach(product => { %>
          <div class="col-6 col-md-3">
            <%- include('partials/product-card', { product: product }) %>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-muted">No new arrivals to show right now.</p>
      <% } %>
    </div>
  </section>

  <!-- Wide Banner -->
  <section class="text-black d-flex align-items-center justify-content-center text-center" 
           style="background-image: url('/images/banner1.jpg'); background-size: cover; background-position: center; height: 200px; ">
    <div class="container">
      <h2 class="fw-bold mb-3">Crafted for Perfection</h2>
      <a href="/shop" class="btn btn-outline-light">Explore The Collection</a>
    </div>
  </section>

  <!-- Trending Products -->
  <section class="container py-5">
    <h2 class="text-center mb-4">Trending</h2>
    <div class="row g-4">
      <% if (locals.trending && trending.length > 0) { %>
        <% trending.forEach(product => { %>
          <div class="col-6 col-md-3">
            <%- include('partials/product-card', { product: product }) %>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-muted">No trending products to show right now.</p>
      <% } %>
    </div>
  </section>

  <!-- Explore More -->
  <section class="container py-5">
    <h2 class="text-center mb-4">Explore More</h2>
    <div class="row g-4">
      <% if (locals.exploreMore && exploreMore.length > 0) { %>
        <% exploreMore.forEach(product => { %>
          <div class="col-6 col-md-3">
            <%- include('partials/product-card', { product: product }) %>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-muted">No products to explore right now.</p>
      <% } %>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
