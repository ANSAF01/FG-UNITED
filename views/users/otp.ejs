<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-6 col-lg-4">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <h1 class="h4 mb-2 text-center">Verify OTP</h1>
              <p class="text-muted text-center small">We sent a 6-digit OTP to <strong><%= email %></strong></p>
            <% if (message) { %>
              <div class="alert alert-info py-2"><%= message %></div>
            <% } %>
            <% if (errors && (errors.otp || errors.general)) { %>
              <div class="alert alert-danger py-2">
                <%= errors.otp || errors.general %>
              </div>
            <% } %>

            <form action="/otp" method="POST" class="vstack gap-3">
              <input type="hidden" name="email" value="<%= email %>">
              <input type="text" maxlength="6" pattern="\\d{6}" name="otp" class="form-control" placeholder="Enter 6-digit OTP" required>
              <button type="submit" class="btn btn-dark w-100">Verify</button>
            </form>

            <form action="/otp/resend" method="POST" class="mt-3 d-grid">
              <input type="hidden" name="email" value="<%= email %>">
              <button id="resendBtn" type="submit" class="btn btn-outline-secondary w-100" disabled>Resend OTP (<span id="timer">60</span>s)</button>
            </form>

            <p class="text-muted small mt-3 mb-0 text-center">Didn't receive the code? Check your spam folder.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Simple 60-second countdown for resend
    (function() {
      const btn = document.getElementById('resendBtn');
      const timerEl = document.getElementById('timer');
      let t = 60;
      const stored = sessionStorage.getItem('otpCooldownAt');
      const now = Date.now();
      if (stored) {
        const diff = 60000 - (now - parseInt(stored, 10));
        if (diff > 0) {
          t = Math.ceil(diff / 1000);
        }
      } else {
        sessionStorage.setItem('otpCooldownAt', now.toString());
      }

      const tick = () => {
        if (t > 0) {
          btn.disabled = true;
          timerEl.textContent = t.toString();
          t -= 1;
          setTimeout(tick, 1000);
        } else {
          btn.disabled = false;
          btn.textContent = 'Resend OTP';
          sessionStorage.removeItem('otpCooldownAt');
        }
      };
      tick();
    })();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
